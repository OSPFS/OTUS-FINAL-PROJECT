! -*- bgp -*-
!
! BGPd sample configuratin file
!
! $Id: bgpd.conf.sample,v 1.1 2002/12/13 20:15:29 paul Exp $
!
hostname isp
!password zebra
!enable password please-set-at-here
!
!bgp mulitple-instance
!
router bgp 65000
 bgp router-id 10.10.1.1
! network 10.0.0.0/8
 neighbor 10.10.1.2 remote-as 65500
 neighbor 10.10.1.2 route-map set-nexthop out
 neighbor 10.10.1.2 ebgp-multihop
 neighbor 10.10.1.2 next-hop-self

 neighbor 10.10.1.3 remote-as 65500
 neighbor 10.10.1.3 route-map set-nexthop out
 neighbor 10.10.1.3 ebgp-multihop
 neighbor 10.10.1.3 next-hop-self

! access-list all permit any
!
!route-map set-nexthop permit 10
! match ip address all
! set ip next-hop 10.0.0.1
!
log file bgpd.log
!
!log stdout